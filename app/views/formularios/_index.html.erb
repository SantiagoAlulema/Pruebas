<table class="files_tbody_content bordered" width="100%" >
<thead>
<tr>
  <th>Cover letter</th>
  <th>Title</th>
  <th colspan="3"></th>
</tr>
</thead>
  <tbody >
  <% @formularios.each do |formulario| %>
    <tr>
      <td><%= File.basename(formulario.title) %></td>
      <td><%= File.basename(formulario.cover_letter) %></td>
      <td>
        <%= link_to 'Ver', formulario_url(formulario),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: "btn btn-primary btn2" } %>

      </td>
      <!-- <td><%= link_to 'Edit', edit_formulario_path(formulario) %></td>
      <td><%= link_to 'Destroy', formulario, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
    </tr>
  <% end %>
  </tbody>
</table>
<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content"></div>
  </div>
</div>


